{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["es5", "dom", "es2017"],
    "types": ["cypress", "node", "@shelex/cypress-allure-plugin"],
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "cypress/pages/home.page.ts"],
  "exclude": [
    "node_modules/"
  ],
  "specPattern": "./cypress/e2e/*.cy.ts",
}